@model IEnumerable<FitnessHub.Data.Entities.GymClasses.VideoClass>

@{
    ViewData["Title"] = "VideoClasses";
}

<h1>VideoClasses</h1>

<p>
    <a asp-action="CreateVideoClass">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoClassUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumReviews)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VideoClassUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumReviews)
            </td>
            <td>
                    <a asp-action="UpdateVideoClass" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="VideoClassDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteVideoClass" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
