@using FitnessHub.Helpers
@model FitnessHub.Data.Entities.GymMachines.Machine

@inject IConverterHelper converterHelper

@{
    ViewData["Title"] = "Machine Details";

    string embedVideoUrl = converterHelper.YoutubeUrlToEmbed(Model.TutorialVideoUrl);
}

<div class="container detailsdelete-text">
    <h2 class="view-text" style="text-align: center; margin-bottom: 4vh; font-weight: bolder; margin-top: 3.5vh">@Model.Name Details</h2>
    <hr />
    <div class="row">

        <!-- Left: Machine info -->
        <div class="col-md-3 mb-4">
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-4 mt-2"><i class="fa-solid fa-pen me-2"></i>Update</a>
                <a asp-action="Index" class="btn btn-secondary mt-2"><i class="fa-solid fa-chevron-left me-2"></i>Back</a>
            </div>
        </div>

        <!-- Middle: Image -->
        <div class="col-md-3 mb-4">
            <dl class="row">
                <dd class="col-sm-12">
                    <img src="@Model.ImageDisplay" alt="Gym machine image" style="max-width:100%;height:20vw; border:solid; border-color: lightgray; border-width: 0.5px" />
                </dd>
            </dl>
        </div>

        <!-- Right: Video -->
        <div class="col-md-6">
            <dl class="row">
                <dd class="col-sm-12">
                    <iframe style="height: 20vw; width:inherit" src="@embedVideoUrl"
                            title="YouTube Video Player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                    </iframe>
                </dd>
            </dl>
        </div>
    </div>
</div>

