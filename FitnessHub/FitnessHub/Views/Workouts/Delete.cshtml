@model FitnessHub.Data.Entities.GymMachines.Workout

<h2>Delete Workout</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Client Email</h4>
    <p>@Model.Client.Email</p>
</div>
<div>
    <h4>Instructor</h4>
    <p>@Model.Instructor.FirstName @Model.Instructor.LastName</p>
</div>
<div>
    <h4>Exercises</h4>
    <ul>
        @foreach (var exercise in Model.Exercise)
        {
            <li>
                Machine: @exercise.Machine, Repetitions: @exercise.Repetitions, Sets: @exercise.Sets, Day: @exercise.DayOfWeek
            </li>
        }
    </ul>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
