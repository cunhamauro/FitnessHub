@model IEnumerable<FitnessHub.Data.Entities.Gym>

@{
    ViewData["Title"] = "Gyms";
}

<div class="row">
    <div class="col-3" style="margin-top: -4px">
        <div class="mb-2">
            <input type="text" id="countryFilter" class="form-control" placeholder="Search by Country">
        </div>
        <div>
            <input type="text" id="cityFilter" class="form-control" placeholder="Search by City">
        </div>
    </div>
    <div class="col-6 view-text">
        <h2 style="text-align: center; margin-bottom: 4vh; font-weight: bolder; margin-top: 2vh">@ViewData["Title"]</h2>
    </div>
    <hr style="margin-bottom:1.8rem" />
</div>

<style>
    .btn-bottom-right {
        position: absolute;
        bottom: 10px;
        right: 10px;
        cursor: pointer;
        z-index: 10; /* Ensure button is above the image */
    }
</style>


@if (Model == null || Model.Any())
{
    <div class="row justify-content-center mt-2" id="gymsContainer">
        @foreach (var gym in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-8 mx-2 gym-card" style="margin-bottom: 2.3rem" data-country="@gym.Country" data-city="@gym.City">
                <div class="card">
                    <div class="card-header" style="text-align: center; font-size: 2em; font-weight: bold;">
                        @gym.Name
                    </div>
                    <div class="card-body position-relative p-0">
                        <!-- Gym Image -->
                        <img src="@gym.ImageDisplay" alt="@gym.Name" class="img-fluid w-100">

                        <!-- Button positioned in the lower right corner -->
                        <button class="btn btn-primary btn-bottom-right"><i class="fa-solid fa-circle-info me-2"></i>More</button>
                    </div>
                    <div class="card-footer" style="color: whitesmoke;">
                        <i class="fa-solid fa-location-dot me-2"></i><small>@gym.City, @gym.Country</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="container mb-4 view-text">
        <div class="text-light">
            There aren't any Memberships currently available. <br />
            But don't give up! <br />
            Come back late or contact us for more information!
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#countryFilter, #cityFilter').on('input', function () {
            var countryQuery = $('#countryFilter').val().toLowerCase();
            var cityQuery = $('#cityFilter').val().toLowerCase();

            $('.gym-card').each(function () {
                var country = $(this).data('country').toLowerCase();
                var city = $(this).data('city').toLowerCase();

                if (country.includes(countryQuery) && city.includes(cityQuery)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>
